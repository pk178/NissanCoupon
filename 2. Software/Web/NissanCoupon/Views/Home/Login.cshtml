@{
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="nissanCoupon">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{'DangNhapHeThong'|translate}} - Nissan Coupon</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-cookies.min.js"></script>
    <script src="~/Scripts/angular-translate.min.js"></script>
    <script src="~/Scripts/app.js"></script>
</head>
<body>
    <div class="container">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a style="line-height:10px;padding-top:10px;padding-bottom:10px" href="#" ng-click="changeLanguage('en')">English</a>
            </li>
            <li>
                <a style="line-height:10px;padding-top:10px;padding-bottom:10px" href="#" ng-click="changeLanguage('vi')">Tiếng Việt</a>
            </li>
        </ul>
    </div>
    <div class="container" style="margin-top:200px" ng-controller="loginController">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{'DangNhapHeThong'|translate}}</h3>
                    </div>
                    <div class="panel-body">
                        <form method="post" name="form">
                            <fieldset>
                                <p ng-if="message" class="text-danger">{{message|translate}}</p>
                                <div class="form-group">
                                    <input class="form-control" placeholder="{{'TenDangNhap'|translate}}" ng-model="user.UserName" type="text" required autocomplete="off" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="{{'MatKhau'|translate}}" ng-model="user.Password" type="password" required autocomplete="off">
                                </div>
                                <button type="submit" ng-click="login()" class="btn btn-lg btn-info btn-block">{{'DangNhap'|translate}}</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
